<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main3Activity">

    <TextView
        android:id="@+id/t_empname"
        android:layout_width="124dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Name:" />

    <EditText
        android:id="@+id/editText_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="23dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginRight="23dp" />

    <TextView
        android:id="@+id/textView_gender"
        android:layout_width="126dp"
        android:layout_height="37dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="59dp"
        android:text="TextView"
        tools:text="Gender:" />

    <RadioGroup
        android:id="@+id/radiogroup_1"
        android:layout_width="226dp"
        android:layout_height="122dp"
        android:layout_alignLeft="@+id/editText_name"
        android:layout_alignTop="@+id/textView_gender" >

        <RadioButton
            android:id="@+id/radioButton_MALE"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView_gender"
            android:layout_alignParentRight="true"
            android:layout_marginRight="143dp"
            android:layout_weight="1"
            android:text="Male" />

        <RadioButton
            android:id="@+id/radioButton_FEMALE"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Female" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView_hobbies"
        android:layout_width="112dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="232dp"
        android:text="Hobbies:" />

    <CheckBox
        android:id="@+id/checkBox_music"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_hobbies"
        android:layout_alignLeft="@+id/editText_name"
        android:text="Listening Music" />

    <CheckBox
        android:id="@+id/checkBox_dancing"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText_name"
        android:layout_below="@+id/textView_hobbies"
        android:text="Dancing"
        android:layout_alignLeft="@+id/editText_name" />

    <Button
        android:id="@+id/button_empsubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="97dp"
        android:layout_marginStart="17dp"
        android:text="Submit"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="17dp" />

    <CheckBox
        android:id="@+id/checkBox_p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox_dancing"
        android:layout_centerHorizontal="true"
        android:text="painting" />

</RelativeLayout>